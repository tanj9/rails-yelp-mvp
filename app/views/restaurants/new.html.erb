<div class="header py-3 px-2 my-2">
  <h1 class="mb-4">Add a new restaurant</h1>
</div>

<h3>Restaurant details:</h3>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.submit "Add this restaurant", class: "btn btn-primary" %>
<% end %>
