<div class="header py-3 px-2 my-2">
  <h1 class="mb-4"><%= @restaurant.name %></h1>
</div>

<table>
  <thead>
      <tr>
          <th colspan="2">Restaurant details</th>
      </tr>
  </thead>
  <tbody>
      <tr>
          <td>Name</td>
          <td><%= @restaurant.name %></td>
      </tr>
      <tr>
          <td>Category</td>
          <td><%= @restaurant.category %></td>
      </tr>
      <tr>
          <td>Phone Number</td>
          <td><%= @restaurant.phone_number %></td>
      </tr>
      <tr>
          <td>Address</td>
          <td><%= @restaurant.address %></td>
      </tr>
      <tr>
          <td>Rating</td>
          <td><%= (@restaurant.reviews.average(:rating)).round(1) %></td>
      </tr>
  </tbody>
</table>

<hr>
<h4>Reviews (<%= @restaurant.reviews.count %>)</h4>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

<ul class="list-group">
  <% @restaurant.reviews.reverse.each do |review| %>
    <li class="list-group-item">
        <p><%= review.content %></p>
    </li>
  <% end %>
</ul>

<%= link_to restaurants_path do %>
  <i class="fas fa-home"></i>
<% end %>
